{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "REGION": "",
    "AMI_ID": "test",
    "AMI_TYPE": "test",
    "REL_VER": "",
    "REL_DASH_VER": "",
    "WINRM_USERNAME": "",
    "WINRM_PASSWORD": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{ user `aws_access_key` }}",
      "secret_key": "{{ user `aws_secret_key` }}",
      "region": "{{ user `REGION` }}",
      "instance_type": "c4.large",
      "source_ami": "{{user `AMI_ID`}}",
      "ami_name": "windowsexec-ami-{{user `AMI_TYPE`}}-{{user `REL_DASH_VER`}}-{{isotime \"1504\"}}",
      "ami_groups": "all",
      "user_data_file": "./bootstrap_win_update.txt",
      "communicator": "winrm",
      "winrm_username": "{{ user `WINRM_USERNAME` }}",
      "winrm_password": "{{ user `WINRM_PASSWORD` }}",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": "150",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "Start-Sleep -Seconds 600"
      ]
    },
    {
      "type": "file",
      "source": "images.txt",
      "destination": "images.txt"
    },
    {
      "script": "./execInitFresh.ps1",
      "type": "powershell",
      "environment_vars": [
        "REL_VER={{user `REL_VER`}}"
      ]
    },
    {
      "script": "./execPullFresh.ps1",
      "type": "powershell",
      "environment_vars": [
        "REL_VER={{user `UPDATE_AMI_VERSION`}}"
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "docker image ls"
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule"
      ]
    }
  ]
}
