{
  "variables": {
    "aws_build_access_key": "",
    "aws_build_secret_key": "",
    "aws_access_key": "",
    "aws_secret_key": "",
    "REGION": "",
    "VPC_ID": "",
    "SUBNET_ID": "",
    "SOURCE_AMI": "test",
    "SECURITY_GROUP_ID": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_build_access_key`}}",
    "secret_key": "{{user `aws_build_secret_key`}}",
    "region": "{{user `REGION`}}",
    "vpc_id": "{{user `VPC_ID`}}",
    "associate_public_ip_address": true,
    "subnet_id": "{{user `SUBNET_ID`}}",
    "source_ami": "{{user `SOURCE_AMI`}}",
    "instance_type": "c3.xlarge",
    "ssh_username": "ubuntu",
    "ami_name": "Shippable Admiral - RC",
    "tags": {
      "OS_Version": "Ubuntu 14.04",
      "Release": "master"
    },
    "launch_block_device_mappings": [
      {
        "device_name": "/dev/sda1",
        "volume_type": "gp2",
        "volume_size": "50",
        "delete_on_termination": true
      }
    ]
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "admiralInit.sh",
      "environment_vars": [
        "SHIPPABLE_RELEASE_VERSION={{user `SHIPPABLE_RELEASE_VERSION`}}",
        "ACCESS_KEY={{user `aws_access_key`}}",
        "SECRET_KEY={{user `aws_secret_key`}}"
      ]
    }
  ]
}
