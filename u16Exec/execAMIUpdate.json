{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "REGION": "",
    "VPC_ID": "",
    "SUBNET_ID": "",
    "AMI_ID": "test",
    "AMI_TYPE": "test",
    "REL_VER": "",
    "REL_DASH_VER": "",
    "SECURITY_GROUP_ID": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `REGION`}}",
      "vpc_id": "{{user `VPC_ID`}}",
      "subnet_id": "{{user `SUBNET_ID`}}",
      "associate_public_ip_address": true,
      "security_group_id": "{{user `SECURITY_GROUP_ID`}}",
      "source_ami": "{{user `AMI_ID`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "u16exec-ami-{{user `AMI_TYPE`}}-{{user `REL_DASH_VER`}}-{{isotime \"1504\"}}",
      "ami_groups": "all",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": "150",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "execPull.sh",
      "environment_vars": [
        "REL_VER={{user `REL_VER`}}"
      ],
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ]
}
