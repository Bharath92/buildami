{
  "variables": {
    "source_image_family": "var",
    "machine_type": "var",
    "region": "var",
    "zone": "var",
    "project_id": "var",
    "service_account_json": "var",
    "RES_IMG_VER_NAME": "",
    "RES_IMG_VER_NAME_DASH": "",
    "SHIP_REL_VER": "",
    "IMAGE_NAMES_SPACED": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "{{user `machine_type`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "region": "{{user `region`}}",
      "zone": "{{user `zone`}}",
      "image_description": "Prep Image for Ubuntu 16.04 x86 64bit",
      "image_name": "prep-u16-x86-64-{{user `RES_IMG_VER_NAME_DASH`}}-{{isotime \"2006-01-02-1504\"}}",
      "disk_size": 120,
      "disk_type": "pd-ssd",
      "ssh_username": "root",
      "account_file": "{{ user `service_account_json`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "init.sh",
      "environment_vars": [
        "SHIPPABLE_RELEASE_VERSION={{user `SHIP_REL_VER`}}"
      ],
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "imagesPull.sh",
      "environment_vars": [
        "RES_IMG_VER_NAME={{user `RES_IMG_VER_NAME`}}",
        "IMAGE_NAMES_SPACED={{user `IMAGE_NAMES_SPACED`}}"
      ]
    }
  ]
}
