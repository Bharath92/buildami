{
  "variables": {
    "source_image_family": "var",
    "machine_type": "var",
    "region": "var",
    "zone": "var",
    "project_id": "var",
    "service_account_json": "var",
    "RES_IMG_VER_NAME": "",
    "RES_IMG_VER_NAME_DASH": "",
    "SHIP_REL_VER": "",
    "FAM_NAME": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "{{user `machine_type`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "region": "{{user `region`}}",
      "zone": "{{user `zone`}}",
      "image_description": "Patch Image for Ubuntu 16.04 x86 64bit",
      "image_family": "{{user `FAM_NAME`}}-{{user `RES_IMG_VER_NAME_DASH`}}",
      "image_name": "{{user `FAM_NAME`}}-{{user `RES_IMG_VER_NAME_DASH`}}-{{isotime \"2006-01-02-1504\"}}",
      "disk_size": 100,
      "disk_type": "pd-ssd",
      "ssh_username": "root",
      "account_file": "{{ user `service_account_json`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "codePull.sh",
      "environment_vars": [
        "SHIPPABLE_RELEASE_VERSION={{user `SHIP_REL_VER`}}"
      ]
    }
  ]
}
