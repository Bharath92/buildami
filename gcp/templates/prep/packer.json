{
  "variables": {
    "machine_type": "var",
    "region": "var",
    "zone": "var",
    "project_id": "var",
    "service_account_json": "var",
    "ssh_username": "",
    "REL_VER": "",
    "SOURCE_IMAGE_FAMILY": "var",
    "FAM_NAME": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "{{user `machine_type`}}",
      "source_image_family": "{{user `SOURCE_IMAGE_FAMILY`}}",
      "region": "{{user `region`}}",
      "zone": "{{user `zone`}}",
      "image_description": "Prep Image for {{user `FAM_NAME`}}",
      "image_family": "{{user `FAM_NAME`}}",
      "image_name": "{{user `FAM_NAME`}}-{{isotime \"2006-01-02-1504\"}}",
      "disk_size": 150,
      "disk_type": "pd-ssd",
      "ssh_username": "{{ user `ssh_username`}}",
      "account_file": "{{ user `service_account_json`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "init.sh",
      "environment_vars": [
        "REL_VER={{user `REL_VER`}}"
      ],
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "destination": "/tmp/images.txt",
      "source": "images.txt",
      "type": "file"
    },
    {
      "type": "shell",
      "script": "imagesPull.sh",
      "environment_vars": [
        "REL_VER={{user `REL_VER`}}"
      ]
    }
  ]
}
